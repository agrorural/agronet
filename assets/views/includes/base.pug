                        section.row
                            mixin card(card_title, card_subtitle, href)
                                .card.mb-5
                                    .card-block.card-body
                                        if card_title
                                            h4.card-title= card_title
                                        if href
                                            .dropdown.card-config
                                                a.btn.btn-light.btn-sm(href= href)
                                                    em.fa.fa-list-ul
                                                    |  Ver todo
                                        if card_subtitle
                                            h6.card-subtitle.mb-2.text-muted= card_subtitle
                                        if block
                                            block
                                        else
                                            p Ingrese contenido del card.
                            block content
